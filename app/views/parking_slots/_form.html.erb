<%= form_for parking_slot do |form| %>
  <% if parking_slot.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(parking_slot.errors.count, "error") %> prohibited this parking_slot from being saved:</h2>

      <ul>
        <% parking_slot.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = 'row form-group'>
    <div class = 'col-lg-2'>
      Parking Lot:
    </div>

    <div class = 'col-lg-4'>
      <%= form.collection_select :parking_lot_id, ParkingLot.all, :id, :name, {}, :class => 'form-control' %>
    </div>
  </div>

  <div class = 'row form-group'>
    <div class = 'col-lg-2'>
      Vehicle Type:
    </div>

    <div class = 'col-lg-4'>
      <%= form.select :parking_type, options_for_select(ParkingSlot.parking_types.map {|key, val| [key.humanize.capitalize, key]}), {},:class => 'form-control' %>
    </div>
  </div>


  <div class = 'row form-group'>
    <div class = 'col-lg-2'>
      Location:
    </div>

    <div class = 'col-lg-4'>
      <%= text_field_tag :locations, '', :class => 'form-control' %>
    </div>
  </div>

  <div class = 'field form-group actions'>
    <%= submit_tag 'Submit', class: 'btn btn-secondary' %>
  </div>

<% end %>
